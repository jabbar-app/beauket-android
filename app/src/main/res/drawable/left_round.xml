<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle">

            <corners android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp" />
            <solid android:color="#15CCCCCC" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp"
                />
            <solid android:color="#1ACCCCCC" />
        </shape>
    </item> <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp" />
            <solid android:color="@color/main_theme" />
        </shape>
    </item>
</layer-list>