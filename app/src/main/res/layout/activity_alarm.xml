<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AlarmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view92"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border_radius_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView287"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noto_bold"
        android:text="알림설정"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/view92"
        app:layout_constraintTop_toTopOf="@+id/view92"
        tools:ignore="HardcodedText"/>

    <View
        android:id="@+id/view90"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#dddddd"
        app:layout_constraintEnd_toEndOf="@+id/view92"
        app:layout_constraintStart_toStartOf="@+id/view92"
        app:layout_constraintTop_toBottomOf="@+id/textView287" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view92"
        app:layout_constraintEnd_toEndOf="@+id/view92"
        app:layout_constraintStart_toStartOf="@+id/view92"
        app:layout_constraintTop_toBottomOf="@+id/view90" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/close"
        app:layout_constraintBottom_toBottomOf="@+id/textView287"
        app:layout_constraintEnd_toEndOf="@+id/view92"
        app:layout_constraintTop_toTopOf="@+id/textView287"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>